#!/usr/bin/env bash

cwd=$1
system=$2

echo "INFO: Running configs for $system"
if [ $system = "MACOS" ]; then
  # Run macos configs
  $cwd/macos
elif [ $system = "LINUX" ]; then
  # Copy Terminator config
  cp $cwd/terminator ~/.config/terminator/config
  # Run gnome configs
  $cwd/gnome
else
  echo "ERR: Unidentified param for system: $system"
fi
