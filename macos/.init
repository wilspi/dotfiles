#!/usr/bin/env bash

### Setup Packages
which -s brew
if [[ $? != 0 ]] ; then
	# Install Homebrew: The missing package manager for OS X
	/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
	# Install brew packages
	$cwd/macos/brew.sh
else
	brew update
	brew upgrade --all
	brew cleanup
fi

email="sourabh.deokar@gmail.com"
### Setup SSH
# Generate new ssh key if ~/.ssh doesn't exist
[ ! -d ~/.ssh ] && ssh-keygen -t rsa -b 4096 -C $email


